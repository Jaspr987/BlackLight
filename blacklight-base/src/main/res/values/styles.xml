<resources>

	<style name="Widget.GifView" parent="@android:style/Widget"></style>

	<!-- Themes -->
	<style name="BL.Theme.Light.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowActionBarOverlay">false</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@color/light_gray</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="CardBackground">@color/white</item>
		<item name="CardForeground">@color/darker_gray</item>
		<item name="CardOrigBackground">@color/midium_gray</item>
		<item name="CardDivider">@color/gray_alpha_lighter</item>
		<item name="CardSubColor">@color/sub_gray</item>
		<item name="CardRatings">@drawable/ic_action_good_dark</item>
		<item name="CardReposts">@drawable/ic_action_reply_all_dark</item>
		<item name="CardComments">@drawable/ic_fa_comments</item>
		<item name="DragBackground">@color/light_gray</item>
		<item name="SingleBottomColor">@color/white</item>
		<item name="SingleDivider">@color/sub_gray</item>
		<item name="IconCollapse">@drawable/ic_action_collapse</item>
		<item name="IconSendNow">@drawable/ic_action_send_now_dark</item>
		<item name="IconEmoticon">@drawable/ic_action_emoticon_dark</item>
		<item name="UserBackground">@color/gray</item>
		<item name="NewPostImgFilter">@color/gray_alpha_lighter</item>
		<item name="BottomViewColor">@color/action_gray</item>
		<item name="LayerColor">@color/action_gray</item>
		<item name="FABBackground">?attr/colorAccent</item>
		<item name="FABNewIcon">@drawable/ic_add_white_24dp</item>
		<item name="IndicatorForeground">@color/action_gray</item>
		<item name="DrawerBackground">@color/white</item>
		<item name="DrawerForeground">@color/action_gray</item>
		<item name="NewPostBackground">@color/midium_gray</item>
		<item name="NewPostForeground">@color/sub_gray</item>
		<item name="NewPostDivider">@color/divider_gray</item>
		<item name="NewPostBottom">@color/selector_gray_lighter</item>
		<item name="UserInfoBackground">@color/white</item>
		<item name="UserInfoText">@color/black</item>
		<item name="UserInfoDivider">@drawable/user_info_divider</item>
	</style>

	<style name="BL.Theme.Purple" parent="BL.Theme.Light.Base">
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryDark">@color/purple_700</item>
		<item name="colorAccent">@color/amber_700</item>
	</style>

	<style name="BL.Theme.Purple.WithNav" parent="BL.Theme.Purple" />

	<style name="BL.Theme.Purple.Translucent" parent="BL.Theme.Purple">
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<style name="BL.Theme.Purple.TranslucentActionBar.NoTranslucent" parent="BL.Theme.Purple">
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="BL.Theme.Purple.TranslucentActionBar" parent="BL.Theme.Purple.Translucent">
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="BL.Theme.Purple.GradientActionBar" parent="BL.Theme.Purple.TranslucentActionBar">
		<item name="android:actionBarStyle">@style/My.Widget.Holo.Light.ActionBar.Gradient</item>
	</style>

	<!-- The default theme family -->
	<style name="BL.Theme.Light" parent="BL.Theme.Purple"/>
	<style name="BL.Theme.Light.WithNav" parent="BL.Theme.Purple.WithNav"/>
	<style name="BL.Theme.Light.Translucent" parent="BL.Theme.Purple.Translucent"/>
	<style name="BL.Theme.Light.TranslucentActionBar.NoTranslucent" parent="BL.Theme.Purple.TranslucentActionBar.NoTranslucent"/>
	<style name="BL.Theme.Light.TranslucentActionBar" parent="BL.Theme.Purple.TranslucentActionBar"/>
	<style name="BL.Theme.Light.GradientActionBar" parent="BL.Theme.Purple.GradientActionBar"/>

	<style name="My.Widget.Holo.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:background">@color/action_gray</item>
		<item name="android:titleTextStyle">@style/TitleText</item>
		<item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse</item>
		<item name="android:backgroundSplit">@color/action_gray</item>
	</style>

	<style name="My.Widget.Holo.Light.ActionBar.Gradient" parent="@style/My.Widget.Holo.Light.ActionBar">
		<item name="android:background">@drawable/action_gradient</item>
	</style>

	<style name="TitleText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="CardViewStyle" parent="android:Widget.TextView">

	</style>

	<style name="DrawerItem">
		<item name="android:background">@drawable/drawer_selector</item>
	</style>

</resources>
