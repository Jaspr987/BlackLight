<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="right"
	android:id="@+id/direct_message_conversation_container"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="horizontal">

	<LinearLayout
		android:id="@+id/direct_message_card"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_width="wrap_content">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:layout_width="240dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/direct_message_conversation_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_width="wrap_content"
				android:text="Content"
				android:textColor="?attr/CardForeground"
				android:textColorLink="?attr/colorAccent"
				android:textSize="15sp"/>

			<ImageView

				android:id="@+id/direct_message_pic"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>

			<TextView
				android:gravity="center_vertical"
				android:id="@+id/direct_message_conversation_date"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:layout_width="wrap_content"
				android:text="Text"
				android:textColor="@color/gray"
				android:textSize="12sp"/>

		</LinearLayout>
		`
	</LinearLayout>

</LinearLayout>
